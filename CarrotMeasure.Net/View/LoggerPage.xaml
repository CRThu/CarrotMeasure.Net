<Page x:Class="CarrotMeasure.Net.View.LoggerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarrotMeasure.Net"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:vm="clr-namespace:CarrotMeasure.Net.ViewModel"
      d:DataContext="{d:DesignInstance Type=vm:LoggerPageViewModel}"
      DataContext="{Binding Source={StaticResource Locator}, Path=LoggerPage}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoggerPage">
    <Grid>
        <TextBlock Text="{Binding Value}" Width="100" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Page>
